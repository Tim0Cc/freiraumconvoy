<h2> <%= user.name %> </h2>

<div>
  <h3>AG-Infos</h3>
  <div>
    <div>
      <h4>Vorstellung der AG <%= user.name %>:</h4>
      <%= user.description %> 
    </div>
    <div>
      <h4>Kontakt:</h4>
      <%= user.contact %> 
    </div>
    <div>
      <h4>Arbeitsstand:</h4>
      <%= user.statusOfWork %> 
    </div>
  </div>
</div>

<div>
  <h3>Beiträge der AG</h3>
  
  <% posts.forEach(post => { %> 
      <div>
        <%= post.title %> 
      </div>
  <% }) %>
</div>
<div>
  <a href="/users">zurück zu den AGs</a>
  <a href="/users/<%= user.id %>/edit">AG bearbeiten</a>
  <%- include('../partials/deleteForm', {url: `/users/${user.id}` }) %> 
</div>