<!-- from router/auth.js -->
<% if(typeof errors!= 'undefined') { %>
  <% errors.forEach(function(error){ %>
    <div class="messages messages-danger">
      <p> <%= error.msg %></p>
    </div>
    <% }) %>
<% } %>
  <!-- from flash -->
  
  <% if(success_msg != '') { %>
    <div class="messages messages-success">
      <%= success_msg %>
    </div>
  <% } %>
  <% if(error_msg != '') { %>
    <div class="messages messages-danger">
      <%= error_msg %>
    </div>
  <% } %> 
  <% if(error != '') { %>
    <div class="messages messages-danger">
     <%= error %>
    </div>
  <% } %>