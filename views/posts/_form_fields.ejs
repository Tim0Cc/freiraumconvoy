<div class="form-row">
  <div class="form-item">
    <label for="title">Titel</label>
    <input type="text" name="title" value="<%= post.title %>">
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="user">AG</label>
    <select name="user" id="">
      <% users.forEach(user => { %>
        <% if (user.id == post.user) { %>
          <option selected label="<%= user.name %>" value="<%= user.id %>">
        <% } else { %> 
          <option label="<%= user.name %>" value="<%=user.id%>">
        <% } %> 
      <% }) %> 
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label for="description">Beschreibung</label>
    <textarea class="textarea-big" name="description"><%= post.description %></textarea>
  </div>
</div>




