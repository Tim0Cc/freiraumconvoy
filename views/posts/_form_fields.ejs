<div class="form-row">
  <div class="form-item">
    <div>
      <label for="title">Titel</label>
      <input type="text" name="title" value="<%= post.title %>">
    </div>
  </div>
  <div class="form-item">
    <div>
      <label for="user">AG</label>
      <select name="user" id="">
        <% users.forEach(user => { %>
          <% if (user.id == post.user) { %>
            <option selected label="<%= user.name %>" value="<%= user.id %>">
          <% } else { %> 
            <option label="<%= user.name %>" value="<%=user.id%>">
          <% } %> 
        <% }) %> 
      </select>
    </div>
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <div>
      <label for="description">Beschreibung</label>
      <textarea name="description"><%= post.description %></textarea>
    </div>
  </div>
</div>




