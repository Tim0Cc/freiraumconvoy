<h3>Kommentare:</h3>
<div>
  <% comments.forEach(comment => { %>
    <% if(post.id == comment.post) { %>
      <div>
        <%= comment.commentText %> 
      </div>
      <div>
        <% users.forEach(user => { %> 
          <% if(user.id == comment.user) { %>
            <%= user.name %>-AG  
          <% } %> 
        <% }) %> 
      </div>
    <% } %> 
    <br>
  <% }) %> 
</div>
